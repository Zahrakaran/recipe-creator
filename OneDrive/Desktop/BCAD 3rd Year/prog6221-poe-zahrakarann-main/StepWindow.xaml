<Window x:Class="RecipeCreatorWPFApp.StepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeCreatorWPFApp"
        mc:Ignorable="d"
        Title="Add Step" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Add Steps" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Step Description:"/>
            <TextBox Name="txtStep" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="Add" Width="100" Margin="10" Click="Add_Click"/>
                <Button Content="Cancel" Width="100" Margin="10" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

