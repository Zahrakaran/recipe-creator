<Window x:Class="RecipeCreatorWPFApp.IngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Ingredient" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Add Ingredient" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Name:"/>
            <TextBox Name="txtName"/>

            <TextBlock Text="Quantity:" Margin="10,0,0,0"/>
            <TextBox Name="txtQuantity"/>

            <TextBlock Text="Unit:" Margin="10,0,0,0"/>
            <TextBox Name="txtUnit"/>

            <TextBlock Text="Calories:" Margin="10,0,0,0"/>
            <TextBox Name="txtCalories"/>

            <TextBlock Text="Food Group:" Margin="10,0,0,0"/>
            <ComboBox Name="cmbFoodGroup">
                <ComboBoxItem Content="Protein"/>
                <ComboBoxItem Content="Carbs"/>
                <ComboBoxItem Content="Fat"/>
                <ComboBoxItem Content="Dairy"/>
                <ComboBoxItem Content="Sweets"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="Add" Width="100" Margin="10" Click="Add_Click"/>
                <Button Content="Cancel" Width="100" Margin="10" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

